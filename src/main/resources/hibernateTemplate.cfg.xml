<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Creation time: $creationDate$ -->

<hibernate-configuration>
    <session-factory>
       
        <property name="connection.driver_class">$dbDriver$</property>
        <property name="connection.url">$dbURL$</property>
        <property name="connection.username">$dbUser$</property>
        <property name="connection.password">$dbPwd$</property>
        <property name="dialect">org.hibernate.dialect.$dialect$</property>
 		
 
        <property name="connection.pool_size">1</property>
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <property name="show_sql">false</property>
        <property name="hbm2ddl.auto">$hbm2ddl$</property>
          
      

    </session-factory>
</hibernate-configuration>